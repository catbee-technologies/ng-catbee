{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "packages",
  "projects": {
    "monaco-editor": {
      "projectType": "library",
      "root": "packages/monaco-editor",
      "sourceRoot": "packages/monaco-editor/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "packages/monaco-editor/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "packages/monaco-editor/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "karmaConfig": "karma.config.mjs",
            "codeCoverage": true,
            "codeCoverageExclude": [],
            "tsConfig": "packages/monaco-editor/tsconfig.spec.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "node_modules/monaco-editor/min",
                "output": "/monaco-editor/min"
              }
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "fix": true,
            "lintFilePatterns": [
              "packages/**/*.html",
              "packages/**/*.scss",
              "packages/**/*.ts"
            ]
          }
        }
      }
    }
  }
}
