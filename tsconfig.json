{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@ng-catbee/utils/types/*": ["./packages/utils/src/types/index"],
      "@ng-catbee/utils/*": ["./packages/utils/src/*/index", "./packages/utils/src/*"],
      "@ng-catbee/monaco-editor/*": ["./packages/monaco-editor/src/index"],
      "@ng-catbee/loader/*": ["./packages/loader/src/index"],
      "@ng-catbee/jwt/*": ["./packages/jwt/src/index"],
      "@ng-catbee/storage/*": ["./packages/storage/src/index"],
      "@ng-catbee/cookie/*": ["./packages/cookie/src/index"],
      "@ng-catbee/indexed-db/*": ["./packages/indexed-db/src/index"]
    },
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "moduleResolution": "bundler",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true,
    "strictStandalone": true
  }
}
